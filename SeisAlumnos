 */


package ejercicios_arrayList;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Scanner;
public class ejercicio1 {
static Scanner sc=new Scanner(System.in);
	static int numero;
	

	public static void main(String[] args) {
		
		int numero=6;
		ArrayList<String>lista=new ArrayList <String>();
		System.out.println("La base de datos de los alumnos del IES Tetuán de las Victorias es...");
		System.out.println("_____________________________________________________________________");
		lista.add("Marta López Gallardo, 1 DAW");
		lista.add("Laura Ruiz Ruiz, 1 DAW");
		lista.add("Marta Pérez López, 2 DAW");
		lista.add("Cristina Rodriguez Pérez, 2 DAW");
		lista.add("Ricardo Gómez González, 1 ASIR");
		lista.add("Pedro Martín Gallardo, 2 ASIR");
		for(String alumno:lista) {
			System.out.println(alumno);
		}
	}

}
